.add-to-cart-popup {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.5);
  z-index: 999;
  display: flex;
  justify-content: center;
  align-items: flex-end;
  opacity: 0;
  visibility: hidden;
  transition: opacity 0.3s, visibility 0.3s;
}

.add-to-cart-popup.show {
  opacity: 1;
  visibility: visible;
}

.popup-content {
  background-color: #fff;
  width: 100%;
  max-height: 80vh;
  border-radius: 20rpx 20rpx 0 0;
  padding: 40rpx;
  position: relative;
  transform: translateY(100%);
  transition: transform 0.3s;
}

.add-to-cart-popup.show .popup-content {
  transform: translateY(0);
}

.close-btn {
  position: absolute;
  top: 20rpx;
  right: 20rpx;
  font-size: 40rpx;
  color: #999;
  padding: 10rpx;
}

.product-info {
  display: flex;
  margin-bottom: 30rpx;
}

.product-image {
  width: 200rpx;
  height: 200rpx;
  border-radius: 10rpx;
  margin-right: 20rpx;
}

.product-details {
  flex: 1;
}

.product-name {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.product-price {
  font-size: 36rpx;
  color: #ff6b81;
  font-weight: bold;
}

.sku-selection {
  margin-bottom: 30rpx;
}

.sku-title,
.quantity-title {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 15rpx;
}

.sku-options {
  display: flex;
  flex-wrap: wrap;
}

.sku-option {
  padding: 10rpx 20rpx;
  border: 1px solid #ddd;
  border-radius: 30rpx;
  margin-right: 15rpx;
  margin-bottom: 15rpx;
  font-size: 26rpx;
  color: #666;
}

.sku-option.selected {
  background-color: #ff6b81;
  color: #fff;
  border-color: #ff6b81;
}

.quantity-selector {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 40rpx;
}

.quantity-control {
  display: flex;
  align-items: center;
  border: 1px solid #ddd;
  border-radius: 30rpx;
  overflow: hidden;
}

.quantity-btn {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 36rpx;
  background-color: #f5f5f5;
}

.quantity-input {
  width: 80rpx;
  height: 60rpx;
  text-align: center;
  font-size: 28rpx;
  border-left: 1px solid #ddd;
  border-right: 1px solid #ddd;
}

.confirm-btn {
  background-color: #ff6b81;
  color: #fff;
  border: none;
  font-size: 32rpx;
  padding: 20rpx 0;
  width: 100%;
  height: 100rpx;
  border-radius: 50rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
