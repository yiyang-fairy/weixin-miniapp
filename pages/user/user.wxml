<view class="container">
  <view class="user-info">
    <image src="{{userInfo.avatarUrl}}" class="avatar" mode="aspectFill"/>
    <text class="nickname">{{userInfo.nickName}}</text>
  </view>
  <view class="menu-list">
    <view class="menu-item" bindtap="navigateTo" data-page="order">
      <text class="menu-text">我的订单</text>
      <text class="arrow">></text>
    </view>
    <view class="menu-item" bindtap="navigateTo" data-page="address">
      <text class="menu-text">收货地址</text>
      <text class="arrow">></text>
    </view>
    <view class="menu-item" bindtap="navigateTo" data-page="coupon">
      <text class="menu-text">优惠券</text>
      <text class="arrow">></text>
    </view>
    <view class="menu-item" bindtap="navigateTo" data-page="settings">
      <text class="menu-text">设置</text>
      <text class="arrow">></text>
    </view>
  </view>
</view>